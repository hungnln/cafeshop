    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.hungnln.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.hungnln.servlets.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoadDrinkServlet</servlet-name>
