        <servlet-name>UpdateServlet</servlet-name>
        <servlet-class>com.hungnln.servlets.UpdateServlet</servlet-class>
        <multipart-config>
            <max-file-size>52428800</max-file-size>
            <max-request-size>104857600</max-request-size>
            <file-size-threshold>10485760</file-size-threshold>
        </multipart-config>
    </servlet>
    <servlet>
        <servlet-name>CreateServlet</servlet-name>
        <servlet-class>com.hungnln.servlets.CreateServlet</servlet-class>
        <multipart-config>
            <max-file-size>52428800</max-file-size>
            <max-request-size>104857600</max-request-size>
            <file-size-threshold>10485760</file-size-threshold>
        </multipart-config>
    </servlet>
